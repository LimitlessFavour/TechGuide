<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".lecturers.AGELecturerDetailActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:id="@+id/age_lec_image"/>
        <LinearLayout
            android:id="@+id/linear_name"
            android:layout_below="@id/age_lec_image"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:cropToPadding="true"
                android:src="@drawable/ic_person_black_24dp"/>
            <LinearLayout
                android:layout_margin="2dp"
                android:padding="4dp"
                android:layout_weight="8"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_margin="2dp"
                    android:padding="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="21sp"
                    android:textColor="@android:color/black"
                    android:text="Name"/>
                <TextView
                    android:id="@+id/lecturer_name_detail"
                    android:layout_margin="2dp"
                    android:padding="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="lecturer name"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout

            android:id="@+id/linear_post"
            android:layout_below="@id/linear_name"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center"                android:layout_weight="2"
                android:cropToPadding="true"
                android:src="@drawable/ic_school_black_24dp"/>
            <LinearLayout
                android:layout_margin="2dp"
                android:padding="4dp"
                android:layout_weight="8"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_margin="2dp"
                    android:padding="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="21sp"
                    android:textColor="@android:color/black"
                    android:text="Post / Level"/>
                <TextView
                    android:id="@+id/lecturer_post_detail"
                    android:layout_margin="2dp"
                    android:padding="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="lecturer post"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout

            android:layout_height="wrap_content"
            android:id="@+id/linear_email"
            android:layout_below="@id/linear_post"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:cropToPadding="true"
                android:src="@drawable/ic_email_black_24dp"/>
            <LinearLayout
                android:layout_margin="2dp"
                android:padding="4dp"
                android:layout_weight="8"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_margin="2dp"
                    android:padding="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="21sp"
                    android:textColor="@android:color/black"
                    android:text="Email"/>
                <TextView
                    android:id="@+id/lecturer_email_detail"
                    android:layout_margin="2dp"
                    android:padding="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="lecturer email"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout

            android:id="@+id/linear_phone"
            android:layout_below="@id/linear_email"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_weight="2"
                android:src="@drawable/ic_call_black_24dp"/>
            <LinearLayout
                android:layout_margin="2dp"
                android:padding="4dp"
                android:layout_weight="8"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_margin="2dp"
                    android:padding="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="21sp"
                    android:textColor="@android:color/black"
                    android:text="Phone Number"/>
                <TextView
                    android:id="@+id/lecturer_phone_detail"
                    android:layout_margin="2dp"
                    android:padding="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="lecturer phone number"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout


            android:id="@+id/linear_degree"
            android:layout_below="@id/linear_phone"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_gravity="center"
                android:layout_width="0dp"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:cropToPadding="true"
                android:src="@drawable/ic_recent_actors_black_24dp"/>
            <LinearLayout
                android:layout_margin="2dp"
                android:padding="4dp"
                android:layout_weight="8"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_margin="2dp"
                    android:padding="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="21sp"
                    android:textColor="@android:color/black"
                    android:text="Degree"/>
                <TextView
                    android:id="@+id/lecturer_degree_detail"
                    android:layout_margin="2dp"
                    android:padding="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="lecturer degrees"/>
            </LinearLayout>

        </LinearLayout>

        <LinearLayout

            android:id="@+id/linear_area"
            android:layout_below="@id/linear_degree"
            android:weightSum="10"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:layout_width="0dp"
                android:layout_gravity="center"
                android:layout_height="50dp"
                android:layout_weight="2"
                android:cropToPadding="true"
                android:src="@drawable/ic_content_paste_black_24dp"/>
            <LinearLayout
                android:layout_margin="2dp"
                android:padding="4dp"
                android:layout_weight="8"
                android:layout_width="0dp"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_margin="2dp"
                    android:padding="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="21sp"
                    android:textColor="@android:color/black"
                    android:text="Area Of Specialization"/>
                <TextView
                    android:id="@+id/lecturer_area_detail"
                    android:layout_margin="2dp"
                    android:padding="4dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="18sp"
                    android:text="lecturer area"/>
            </LinearLayout>

        </LinearLayout>



    </RelativeLayout>
</ScrollView>