<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LecturerDetailActivity">

    <RelativeLayout
        android:padding="6dp"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView

            android:layout_width="match_parent"
            android:layout_marginBottom="31dp"
            android:layout_height="300dp"
            android:id="@+id/lecturer_image"

            />
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"
            android:layout_below="@id/lecturer_image"
            />

        <TextView
            android:id="@+id/lecturer_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/lecturer_image"
            android:text="Name"
            android:textSize="21sp"
            android:textStyle="bold"
            />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"
            android:layout_below="@id/lecturer_name"

            />

        <TextView
            android:id="@+id/lecturer_phone"
            android:layout_below="@id/lecturer_email"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="21sp"
            android:textStyle="bold"
            android:text="phone"/>
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"
            android:layout_below="@id/lecturer_phone"
            />

        <TextView
            android:id="@+id/lecturer_email"
            android:layout_below="@id/lecturer_name"
            android:layout_width="wrap_content"
            android:textSize="21sp"
            android:textStyle="bold"
            android:text="email"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"
            android:layout_below="@id/lecturer_email"
            />


        <TextView
            android:id="@+id/lecturer_degree"
            android:layout_below="@id/lecturer_phone"
            android:layout_width="wrap_content"
            android:textSize="21sp"
            android:textStyle="bold"
            android:text="degree"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"
            android:layout_below="@id/lecturer_degree"
            />

        <TextView
            android:id="@+id/lecturer_level"
            android:layout_below="@id/lecturer_degree"
            android:layout_width="wrap_content"
            android:textSize="21sp"
            android:textStyle="bold"
            android:text="level"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"
            android:layout_below="@id/lecturer_level"
            />

        <TextView
            android:id="@+id/lecturer_office"
            android:layout_below="@id/lecturer_level"
            android:layout_width="wrap_content"
            android:textSize="21sp"
            android:textStyle="bold"
            android:text="office"
            android:layout_height="wrap_content" />
        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="#c0c0c0"
            android:layout_below="@id/lecturer_office"
            />



    </RelativeLayout>

</ScrollView>